<odoo>
    <data>
        <!-- Menu Item -->
        <record id="menu_plaid_integration" model="ir.ui.menu">
            <field name="name">Plaid Integration</field>
            <field name="sequence" eval="10"/>
            <field name="action" ref="action_open_plaid_link"/>
            <field name="parent_id" ref="base.menu_root" />
        </record>

        <!-- Action -->
        <record id="action_open_plaid_link" model="ir.actions.client">
            <field name="name">Open Plaid Link</field>
            <field name="tag">st_odoo_statements.plaid_link_action</field>
        </record>

        <!-- Action Class -->
        <record id="plaid_link_action" model="ir.actions.server">
            <field name="name">Plaid Link Action</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_res_users"/>
            <field name="state">code</field>
            <field name="code">action = request.env['ir.actions.client'].browse(env.ref('st_odoo_statements.action_open_plaid_link').id).read()[0]</field>
        </record>
    </data>
</odoo>